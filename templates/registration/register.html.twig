{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-12 mt-5">

				{{ form_errors(registrationForm ) }}

				{{ form_start(registrationForm, {'attr': {'class': 'form-registration '}}) }}
				<h1 class="h3 mb-3 font-weight-normal">Enregistrement</h1>
				{% for flash_error in app.flashes('verify_email_error') %}
					<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
				{% endfor %}
				<label for="{{ field_name(registrationForm.email) }}">Email</label>
				<input name="{{ field_name(registrationForm.email) }}" class="form-control">

				<label for="{{ field_name(registrationForm.plainPassword) }}">Mots de passe</label>
				<input name="{{ field_name(registrationForm.plainPassword) }}" class="form-control">

				<label for="{{ field_name(registrationForm.agreeTerms) }}">J'accepte les termes</label>
                <input class="mt-3" type="checkbox" name="{{ field_name(registrationForm.agreeTerms) }}">
				<div class="buttons-register mt-3">
					<button type="submit" class="btn btn-primary">S'enregistrer</button>
				</div>
				{{ form_end(registrationForm) }}

			</div>
		</div>
	</div>
{% endblock %}
