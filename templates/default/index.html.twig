	{% endfor %}
	<div class="show-more-tricks">
		{% include "default/tricks-show-more.html.twig" %}

	</div>
	<div class="button-show-all mt-5 mb-5">
		<a class="btn btn-light btn-redirect-tricks" href="{{path('app_ajax_default_show_more')}}">Afficher plus</a>
	</div>
{% endblock %}
