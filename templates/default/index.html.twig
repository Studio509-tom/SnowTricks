{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}
	<div class="homepage-parent">
		<div class="file-slogan">
			<h1 class="slogan">Pour r√©aliser l'impossible</h1>
			<a href="#title-section">
				<i class="fas fa-arrow-down"></i>
			</a>
		</div>
	</div>
	<h2 class="title-section" id="title-section">Tricks</h2>
	{% for message in app.flashes('error') %}
