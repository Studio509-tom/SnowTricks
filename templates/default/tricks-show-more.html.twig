<div class="container">
	<div class="row">
		{% for trick in tricks %}
			{% if number_tricks is not defined %}
				{% if loop.index <= 6 %}
					<div class="col-4 mt-3">

						<a href="{{path("app_trick_show" , { "slug" : trick.slug } )}}">
							<div class="trick-resume">
								{% if trick.getFirstFile() is defined and trick.getFirstFile() != null %}
									{% for first_file in trick.getFirstFile() %}
										<img class="picture-multiple-trick" src="{{asset('files/tricks/' ~ trick.id ~ "/" ~ first_file )}}" alt="no picture">
									{% endfor %}
								{% else %}
									<img class="picture-multiple-trick" src="{{asset('files/defaults/no-picture.jpg')}}" alt="no picture">
								{% endif %}
								<p class="title">{{trick.title}}</p>
								{% if is_granted("IS_AUTHENTICATED") %}
									<div class="link-change-trick">
										<a class="btn btn-light edit-trick" href="{{ path('app_ajax_trick_edit', {'id': trick.id}) }}">
											<i class="fas fa-pencil"></i>
										</a>
										<a class="btn btn-light delete-pop-up" href="{{ path('app_ajax_trick_delete', {'id': trick.id}) }}">
											<i class="fas fa-trash-can"></i>
										</a>
									</div>
								{% endif %}
							</div>
						</a>
					</div>
				{% endif %}
			{% else %}
				{% if loop.index <= number_tricks %}
					<div class="col-4 mt-3">
						<a href="{{path("app_trick_show" ,{"slug" : trick.slug })}}">
							<div class="trick-resume">
								{% if trick.getFirstFile() is defined and trick.getFirstFile() != null %}
									{% for first_file in trick.getFirstFile() %}
										<img class="picture-multiple-trick" src="{{asset('files/tricks/' ~ trick.id ~ "/" ~ first_file )}}" alt="no picture">
									{% endfor %}
								{% else %}
									<img class="picture-multiple-trick" src="{{asset('files/defaults/no-picture.jpg')}}" alt="no picture">
								{% endif %}
								<p class="title">{{trick.title}}</p>
								{% if is_granted("IS_AUTHENTICATED") %}
									<div class="link-change-trick">
										<a class="btn btn-light edit-trick" href="{{ path('app_ajax_trick_edit', {'id': trick.id}) }}">
											<i class="fas fa-pencil"></i>
										</a>
										<a class="btn btn-light delete-pop-up" href="{{ path('app_ajax_trick_delete', {'id': trick.id}) }}">
											<i class="fas fa-trash-can"></i>
										</a>
									</div>
								{% endif %}
							</div>
						</a>
					</div>
				{% endif %}
			{% endif %}
		{% endfor %}
		{% if number_tricks is defined %}
			{% if number_tricks >= 15 %}
				<a href="#title-section" class="link-top">
					<i class="fas fa-arrow-up"></i>
				</a>
			{% endif %}
		{% endif %}
	</div>
</div>
